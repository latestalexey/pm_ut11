	ИмяФормы = "БизнесПроцесс.акГосКонтракт.Форма.ФормаЗадачи";

	Возврат Новый Структура(
		"ПараметрыФормы, ИмяФормы", Новый Структура("Ключ", ЗадачаСсылка), ИмяФормы
	);

КонецФункции

//Получить описание задачи процесса
//
// Параметры
//  ТочкаМаршрутаБизнесПроцесса  - ТочкаМаршрутаБизнесПроцессаСсылка - точка маршрута для которой 
//                                 возвращается описание
//
// Возвращаемое значение:
//   Строка   - описание для точки маршрута
//
Функция ОписаниеТочки(ТочкаМаршрутаБизнесПроцесса) Экспорт
	
	Если ТочкаМаршрутаБизнесПроцесса = БизнесПроцессы.акГосКонтракт.ТочкиМаршрута.СоставитьКоммерческоеПредложение Тогда
		Возврат НСтр("ru=' - подготовте комерческое предложение;'"
		);
	ИначеЕсли ТочкаМаршрутаБизнесПроцесса = БизнесПроцессы.акГосКонтракт.ТочкиМаршрута.ОтправитьПочту Тогда
		Возврат НСтр(
			"ru=' - отправте коммерческое предложение'"
		);
	ИначеЕсли ТочкаМаршрутаБизнесПроцесса = БизнесПроцессы.акГосКонтракт.ТочкиМаршрута.Позвонить Тогда
		Возврат НСтр(
			"ru=' - позвонить по коммерческому предложению'"
		);
	ИначеЕсли ТочкаМаршрутаБизнесПроцесса = БизнесПроцессы.акГосКонтракт.ТочкиМаршрута.СогласоватьКоммерческоеПредложение Тогда
		Возврат НСтр(
			"ru=' - согласуйте коммерческое предложение'"
		);
	ИначеЕсли ТочкаМаршрутаБизнесПроцесса = БизнесПроцессы.акГосКонтракт.ТочкиМаршрута.СформироватьЗаказ Тогда
		Возврат НСтр(
			"ru=' - сформируйте заказ'"
		);
	ИначеЕсли ТочкаМаршрутаБизнесПроцесса = БизнесПроцессы.акГосКонтракт.ТочкиМаршрута.ПодготовитьКонкурснуюДокументацию Тогда
		Возврат НСтр(
			"ru=' - Подготовте конкурсную документацию'"
		);
	ИначеЕсли ТочкаМаршрутаБизнесПроцесса = БизнесПроцессы.акГосКонтракт.ТочкиМаршрута.ЗаявкаНаБронированиеДС Тогда
		Возврат НСтр(
			"ru=' - Подготовте заявку на бронирование дс'"
		);
	ИначеЕсли ТочкаМаршрутаБизнесПроцесса = БизнесПроцессы.акГосКонтракт.ТочкиМаршрута.СоздатьОповещениеОДатеАукциона Тогда
		Возврат НСтр(
			"ru=' - уточните время аукциона'"
		);
	ИначеЕсли ТочкаМаршрутаБизнесПроцесса = БизнесПроцессы.акГосКонтракт.ТочкиМаршрута.ВнесениеРезультатаАукциона Тогда
		Возврат НСтр(
			"ru=' - запишите результат аукциона'"
		);
	ИначеЕсли ТочкаМаршрутаБизнесПроцесса = БизнесПроцессы.акГосКонтракт.ТочкиМаршрута.ПозвонитьПослеАукциона Тогда
		Возврат НСтр(
			"ru=' - созвонитеь с клиентом по результатам аукциона'"
		);
	ИначеЕсли ТочкаМаршрутаБизнесПроцесса = БизнесПроцессы.акГосКонтракт.ТочкиМаршрута.ОбеспечитьЗаказ Тогда
		Возврат НСтр(
			"ru=' - Обеспечте заказ'"
		);
		
	КонецЕсли;

КонецФункции

//Возвращает список этапов процесса при его плановом выполнении
