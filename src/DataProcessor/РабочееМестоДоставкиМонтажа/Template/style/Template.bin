body {
	margin: 0;
	padding: 0;
}

.tasklink {
	font-size:14px;

}

.taskarea {
	cursor: move;
}
.taskitem {
	position: absolute;
	background: rgb(135,206,235); 
	border: solid 1px black;
	overflow: hidden;
	font-size: 10px;
	padding:5px;
	cursor: move;
}

.sizer{
	position:relative;
	width: 100%;
	height: 20px;
	background-color: chocolate;
	cursor: nwse-resize;	
}

.calendar_table {
	position: absolute;
	width: 1150px;
	border: solid 0px black;
	border-spacing: 0;
	border-collapse: collapse;
}

.calendar_table td {
	height: 19px;
	width: 149px;
	border: solid 1px black;
	margin: 0;
	padding: 0;
}

.calendar_table th {
	background-color: antiquewhite;
	height: 20px;
	border: solid 0px black;
	margin: 0;
	padding: 0;
}

.calendar_table .col1 {
	background-color: antiquewhite;
	width: 100px !important;
}

.out {
	position: fixed;
	bottom: 30px;
	left: 30px;
}