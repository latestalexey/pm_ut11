// Инициализация и заполнение

Процедура ЗаполнитьТоварыПоОстаткамКОформлению(ДатаЗаполнения) Экспорт
	
	Структура = Новый Структура("Организация, Партнер, Соглашение, Валюта, НалогообложениеНДС, ЦенаВключаетНДС, Товары",
		Комиссионер,
		Организация,
		Неопределено, // Соглашение,
		Валюта,
		НалогообложениеНДС,
		ЦенаВключаетНДС,
		Товары
	);
	
	КомиссионнаяТорговляСервер.ЗаполнитьПоТоварамКОформлениюОтчетовКомитентуЗаПериод(
		Структура,
		НачалоПериода,
		КонецПериода,
		Истина // ЕстьСуммаПродажиНДС
	);
	
	СтруктураПересчетаСуммы = ОбработкаТабличнойЧастиКлиентСервер.ПолучитьСтруктуруПересчетаСуммыНДСВСтрокеТЧ(ЭтотОбъект);
	ПродажиСервер.ЗаполнитьЦены(
		Товары,
		, // Массив строк или структура отбора
		Новый Структура( // Параметры заполнения
			"Дата, Валюта, ВидЦены, ПоляЗаполнения",
			Дата,
			Валюта,
			ВидЦены,
			"Цена, ВидЦены"
		),
		Новый Структура( // Структура действий с измененными строками
			"ПересчитатьСумму, ПересчитатьСуммуСНДС, ПересчитатьСуммуНДС",
			"КоличествоУпаковок", СтруктураПересчетаСуммы, СтруктураПересчетаСуммы
		)
	);
	
КонецПроцедуры

Процедура ИнициализироватьДокумент(ДанныеЗаполнения = Неопределено)

	Организация = ЗначениеНастроекПовтИсп.ПолучитьОрганизациюПоУмолчанию(Организация);
	Валюта = ДоходыИРасходыСервер.ПолучитьВалютуУправленческогоУчета(Валюта);
 	Менеджер = Пользователи.ТекущийПользователь();

	Запрос = Новый Запрос("
	|ВЫБРАТЬ РАЗРЕШЕННЫЕ ПЕРВЫЕ 1
	|	ДанныеДокумента.Услуга КАК Услуга,
	|	ДанныеДокумента.Услуга.СтавкаНДС КАК СтавкаНДСВознаграждения,
	|	ДанныеДокумента.СпособРасчетаВознаграждения КАК СпособРасчетаВознаграждения,
	|	ДанныеДокумента.ПроцентВознаграждения КАК ПроцентВознаграждения
	|ИЗ
	|	Документ.ОтчетПоКомиссииМеждуОрганизациями КАК ДанныеДокумента
	|ГДЕ
	|	ДанныеДокумента.Менеджер = &Менеджер
	|	И ДанныеДокумента.Проведен
	|
	|УПОРЯДОЧИТЬ ПО
	|	ДанныеДокумента.Дата УБЫВ
	|");
	Запрос.УстановитьПараметр("Менеджер", Менеджер);
	
	Выборка = Запрос.Выполнить().Выбрать();
	Если Выборка.Следующий() Тогда
		Услуга = Выборка.Услуга;
		СтавкаНДСВознаграждения = Выборка.СтавкаНДСВознаграждения;
		СпособРасчетаВознаграждения = Выборка.СпособРасчетаВознаграждения;
		ПроцентВознаграждения = Выборка.ПроцентВознаграждения;
	КонецЕсли;
	
	Подразделение = ЗначениеНастроекПовтИсп.ПодразделениеПользователя(Менеджер, Подразделение);
	ВидЦены = Справочники.ВидыЦен.ВидЦеныПоУмолчанию(Истина, ВидЦены);
	
	ПорядокОплаты = Перечисления.ПорядокОплатыПоСоглашениям.ПолучитьПорядокОплатыПоУмолчанию(Валюта, НалогообложениеНДС);
	ГруппаФинансовогоУчета = Справочники.ГруппыФинансовогоУчетаРасчетов.ПолучитьГруппуФинансовогоУчетаПоУмолчанию(ПорядокОплаты);
	
	ОтветственныеЛицаСервер.ЗаполнитьОтветственныхЛицДокумента(ЭтотОбъект);
	
КонецПроцедуры

