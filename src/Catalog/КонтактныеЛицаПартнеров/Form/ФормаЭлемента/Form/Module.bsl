	УправлениеСвойствами.ПриЧтенииНаСервере(ЭтаФорма, ТекущийОбъект);
	
КонецПроцедуры

&НаСервере
Процедура ПередЗаписьюНаСервере(Отказ, ТекущийОбъект)
	
	// Обработчик механизма "Контактная информация"
	УправлениеКонтактнойИнформацией.ПередЗаписьюНаСервере(ЭтаФорма, ТекущийОбъект, Отказ);
	
	// Обработчик механизма "Свойства"
	УправлениеСвойствами.ПередЗаписьюНаСервере(ЭтаФорма, ТекущийОбъект);
	
	ОбъектЗаписан = Истина;
                                   
ОбъектЗаписан = ПроверитьЗаполнениеКИ(); //(Форма.КонтактнаяИнформацияОписаниеДополнительныхРеквизитов);
	
		
КонецПроцедуры


&НаСервере
Функция  ПроверитьЗаполнениеКИ();
	
	Запись = Истина;	
	Сообщение = новый СообщениеПользователю;
	
		Если ПустаяСтрока(ЭтаФорма.контактнаяИнформацияПоле1)=Истина Тогда
			Сообщение.Поле = "контактнаяИнформацияПоле1";
			Сообщение.Текст = "не заполнено поле - Телефон";
			Сообщение.Сообщить();
			Запись=Ложь;
		КонецЕсли;
		
		Если ПустаяСтрока(ЭтаФорма.контактнаяИнформацияПоле2) = Истина Тогда
			 Сообщение.Поле = "контактнаяИнформацияПоле2";
			Сообщение.Текст = "Не заполнено поле - Мобильный телефон";
			Сообщение.Сообщить();
			 Запись=Ложь;
		 КонецЕсли;       
		 
		 Если ПустаяСтрока(ЭтаФорма.контактнаяИнформацияПоле3) = Истина  тогда
			 Сообщение.Поле = "контактнаяИнформацияПоле3";
			Сообщение.Текст = "Не корректно заполнена почта";
			Сообщение.Сообщить();
			  Запись=Ложь;
		КонецЕсли;
	
		
	
Возврат Запись;

КонецФункции

